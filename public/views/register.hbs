{{>header}}
<div class="login-box">
  <h2>Register</h2>
  <form action="/register" method="POST">
    <div class="user-box">
      <input type="text" id="username" name="username" required="true">
      <label>Username</label>
    </div>
    <div class="user-box">
      <input type="password" id="password" name="password" required="true">
      <label>Password</label>
    </div>
    <p id="info-about-reg">
      <ul>
        {{#each msg}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </p>
    <button>
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      Register
    </button>
  </form>
</div>